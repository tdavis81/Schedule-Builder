<style scoped>
    h1, h2, h3, h4, h5, h6 {
        color: white;
    }
    #SupplyTable_filter label{
        color: white;
    }
    #SupplyTable_info {
        color: white;
    }
</style>
@{
    ViewBag.Title = "Users";
}

<div class="row" align="center">
    <h2 align="center">Users</h2>
</div>

<div class="table-responsive">
    <table id="SupplyTable" class="table table-striped table-dark">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Full Time</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in ViewBag.Users)
            {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                @if (user.IsFullTime)
                {
                    <td><i style="margin-left:26px" class="fas fa-check-circle"></i></td>
                }
                else
                {
                    <td><i style="margin-left:26px" class="fas fa-times-circle"></i></td>
                }
                <td>
                    <a href="@Url.Action("EditUser", new { id = user.ID })">
                        <i class="fas fa-pencil-alt"></i>
                    </a>
                    <a onclick="confirmDelete(@user.ID)">
                        <i class="fas fa-trash-alt text-danger"></i>
                    </a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>

@section scripts
{
    <script>
        $('[data-fancybox]').fancybox({
            toolbar: false,
            smallBtn: false,
            iframe: {
                preload: false,
                css: {
                    width: "400px",
                    height: "200px"
                }
            },
            afterClose: function () {
                window.location.href = window.location.href;
            }
        });

        $(document).ready(function () {
            $('#SupplyTable').DataTable({
                dom: 'Bfrtip',
                buttons: [
                    {
                        text: '<i class="fas fa-plus"></i> Add',
                        action: function (e, dt, node, config) {
                            window.location.href = '@Url.Action("AddUser", "Admin")';
                        }
                    }
                ],
                "columnDefs": [
                    { "orderable": false, "targets": 3 }
                ]
            });
            $(".dt-button").attr('class', 'btn btn-primary');

        });

        // Pop alert asking user if they would like to delete
        function confirmDelete(userId) {
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                type: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.value) {
                    Swal.fire(
                        'Deleted!',
                        'Schedule has been deleted.',
                        'success'
                    );
                    setTimeout(function () { location.href = "/Admin/Delete?id=" + userId; }, 1500);
                };
            });
        }
    </script>

}

