
<style>
    h1, h2, h3, h4, h5, h6, label {
        color: white
    }
</style>
@{
    ViewBag.Title = "Change Password";
}

@using (Html.BeginForm("UpdatePassword", "Account", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <h2 style="margin-top:10%">Change Password</h2>
            <hr>
        </div>
    </div>

    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <h4>Current Password</h4>
            <input type="password" name="oldPassword" class="form-control" id="cPass" placeholder="Current Password" required autofocus>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <h4>New Password</h4>
            <input type="password" name="newPassword" class="form-control" id="nPass" placeholder="New Password" required>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <h4>Retype New Password</h4>
            <input type="password" name="confirmNewPassword" class="form-control" id="rnPass" placeholder="Retype New Password" required>
        </div>
    </div>
    <br />
    if (ViewBag.result != null && ViewBag.result != "")
    {
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6" style="padding-top: .35rem">
                <span class="text-success align-middle">
                    <i class="fa fa-check"></i> @ViewBag.result
                </span>
            </div>
        </div>
        <br />
    }
    if (ViewBag.error != null && ViewBag.error != "")
    {
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6" style="padding-top: .35rem">
                <div id="invalidC" class="form-control-feedback">
                    <span class="text-danger align-middle">
                        <i class="fa fa-times"></i> @ViewBag.error
                    </span>
                </div>
            </div>
        </div>
        <br />
    }
    <div class="row" style="padding-top: 1rem">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Update Password</button>
        </div>
    </div>
}

@section scripts {
    <script>
        $(function () {
            var element = document.getElementById("accountActive");
            element.classList.add("active");
        });
    </script>
}